{{#if view.isPaid}}
  <strong class="text-success">{{formatMoney view.total}}</strong>
{{else}}
    <strong class="text-danger">{{formatMoney view.total}}</strong>
    (<small data-toggle="tooltip" title="Is missing to pay">{{view.notPaid}}</small>/<small data-toggle="tooltip" title="Was already paid">{{view.paid}}</small>)
{{/if}}